<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ball_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:strokeColor="#172774"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#25F44336">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_name"
                android:layout_width="0dip"
                android:layout_weight="0.95"
                android:layout_height="match_parent"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="업종"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_code"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="우편번호"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_post"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="주소"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_address"
                android:layout_width="0dip"
                android:layout_weight="0.65"
                android:layout_height="match_parent"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="전화번호"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_phone"
                android:layout_width="0dip"
                android:layout_weight="0.65"
                android:layout_height="match_parent"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="Url"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_url"
                android:layout_width="0dip"
                android:layout_weight="0.65"
                android:layout_height="match_parent"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="위도"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_lat"
                android:layout_width="0dip"
                android:layout_weight="0.65"
                android:layout_height="match_parent"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:layout_width="0dip"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:text="경도"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.05"/>
            <TextView
                android:id="@+id/ball_lng"
                android:layout_width="0dip"
                android:layout_weight="0.65"
                android:layout_height="match_parent"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>